<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 40
            size_hint: (1, 0.15)
            
        
        GridLayout:
            cols: 4
            rows: 5

            #Rows
            Button:
                #id: btn_pct
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "%"
                on_press: root.percent()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "DEL"
                on_press: root.delete()
            
            Button:
                #id: clear
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "C"
                on_press: root.clear()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "/"
                on_press: root.devide()
            
             #Rows
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "7"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.seven()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "8"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.eight()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "9"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.nine()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "\u00D7"
                on_press: root.multiply()
            
             #Rows
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "4"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.four()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "5"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.five()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "6"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.six()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "-"
                on_press: root.minus()
            
             #Rows
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "1"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.one()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "2"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.two()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "3"
                background_color: (180/255, 180/255, 180/255, 1)
                on_press: root.three()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "+"
                on_press: root.plus()
            
             #Rows
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "+/-"
                on_press: root.sign()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "0"
                on_press: root.zero()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "."
                on_press: root.dot()
            
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "="
                on_press: root.equal()